<Window x:Class="Task.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Task Manager" Height="450" Width="800">
    <Grid>
        <TextBlock Text="Task Manager" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0"/>

        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">
            <Button Content="Add Task" Width="200" Height="40" Margin="0,10,0,0" Click="AddTaskButton_Click"/>
            <Button Content="View Tasks" Width="200" Height="40" Margin="0,10,0,0" Click="ViewTasksButton_Click"/>
            <Button Content="Exit" Width="200" Height="40" Margin="0,10,0,0" Click="ExitButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
